<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.stream.dao.ISubjectDaoDao">
    <sql id="allAttribute">
        <![CDATA[

            id
            name
            category
            pid
            priority
            type
            status
            templateId
            channelId
            desc
            tags
            shortName
            createTime
            updateTime


        ]]>
    </sql>

    <insert id="save" parameterType="org.stream.entity.SubjectBean" useGeneratedKeys="true" keyProperty="id">
        insert into t_subject(name,dir,createTime)
        VALUES(#{name},#{dir},#{createTime})
    </insert>
    <select id="get" parameterType="long" resultType="org.stream.entity.SubjectBean">
        select
        <include refid="allAttribute"/>
        from t_subject
        where id=#{0} and isDel=0;
    </select>

    <select id="getAllChannel" resultType="org.stream.entity.SubjectBean">
        select
        <include refid="allAttribute"/>
        from t_subject where isDel =0 order by createTime desc;
    </select>

    <update id="update" parameterType="org.stream.entity.SubjectBean">
      update t_subject set
      name=#{name},
      dir=#{dir}
      where id=#{id}
    </update>

    <update id="delete" parameterType="org.stream.entity.SubjectBean">
        update t_subject set isDel=1  where id =#{id}
    </update>
</mapper>