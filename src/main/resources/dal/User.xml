<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.stream.dao.IUserDao">
    <sql id="allAttribute">
        <![CDATA[





            id,
            account,
            userName,
            password,
            createDate,
            updateDate,
            isDel





        ]]>
    </sql>

    <insert id="save" parameterType="org.stream.entity.UserBean" useGeneratedKeys="true" keyProperty="id">
        insert into user(account,userName,password,createDate)
        VALUES(#{account},#{userName},#{password},#{createDate})
    </insert>

    <select id="getUserByAccount" parameterType="String" resultType="org.stream.entity.UserBean">
        select
        <include refid="allAttribute"/>
        from user where account=#{account} and isDel=0
    </select>

    <select id="get" parameterType="long" resultType="org.stream.entity.UserBean">
        select
        <include refid="allAttribute"/>
        from user
        where id=#{0} and isDel=0;
    </select>

    <select id="getUserTotalNum" resultType="int">
        select count(id) from user
        where isDel=0
        and (#{0}='' or userName like "%"#{0}"%");
    </select>

    <select id="getUserWithPage" resultType="org.stream.entity.UserBean">
        select
        <include refid="allAttribute"/>
        from user
        where isDel=0
        and (#{0}='' or userName like "%"#{0}"%")
        order by if(updateDate is null,createDate,updateDate) desc
        limit #{1},#{2};
    </select>

</mapper>