<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.stream.dao.IChannelDao">
    <sql id="allAttribute">
        <![CDATA[
            id,
            name,
            dir,
            isDel,
            createTime
        ]]>
    </sql>

    <insert id="save" parameterType="org.stream.entity.ChannelBean" useGeneratedKeys="true" keyProperty="id">
        insert into t_channel(name,dir,createTime)
        VALUES(#{name},#{dir},#{createTime})
    </insert>
    <select id="get" parameterType="long" resultType="org.stream.entity.ChannelBean">
        select
        <include refid="allAttribute"/>
        from t_channel
        where id=#{0} and isDel=0;
    </select>

    <select id="getAllChannel" resultType="org.stream.entity.ChannelBean">
      select
        <include refid="allAttribute"/>
        from t_channel where isDel =0 order by createTime desc;
    </select>

    <select id="getChannelByName" resultType="org.stream.entity.ChannelBean" parameterType="String">
      SELECT
      <include refid="allAttribute"/>
        from t_channel where isDel=0 and name=#{0}
    </select>

    <update id="update" parameterType="org.stream.entity.ChannelBean">
      update t_channel set
      name=#{name},
      dir=#{dir}
      where id=#{id}
    </update>

    <update id="delete" parameterType="org.stream.entity.ChannelBean">
        update t_channel set isDel=1  where id =#{id}
    </update>
</mapper>