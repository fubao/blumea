<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.blumea.cms.dao.CategoryDao">
    <sql id="allAttribute">
        <![CDATA[

            id,
            category_name,
            category_alias,
            user_id,
            article_num,
            create_time,
            status

        ]]>
    </sql>
    <resultMap id="CategoryMap" type="Category">
        <id column="id" property="id"/>
        <result column="category_name" property="categoryName"/>
        <result column="category_alias" property="categoryAlias"/>
        <result column="article_num" property="articleNum"/>
        <result column="user_id" property="userId"/>
        <result column="create_time" property="createTime"/>
        <result column="status" property="status"/>
    </resultMap>
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into ms_category(
            category_name,
            category_alias,
            user_id,
            article_num,
            create_time
        )
        values(
            #{categoryName},
            #{categoryAlias},
            #{userId},
            #{articleNum},
            #{createTime}
        )
    </insert>
    <select id="get" parameterType="long" resultMap="CategoryMap">
        select
        <include refid="allAttribute"/>
        from ms_category
        where id=#{0};
    </select>

    <select id="getAllCategory" resultMap="CategoryMap">
        select
        <include refid="allAttribute"/>
        from ms_category where status = 0 order by create_time asc;
    </select>

</mapper>